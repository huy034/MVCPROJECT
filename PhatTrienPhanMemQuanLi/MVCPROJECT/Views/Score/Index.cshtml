@{
    ViewData["Title"] = "Index";
}

<h2>Tính điểm tổng kết môn học</h2>

<form method="post">
    <label for="A">Điểm chuyên cần (A):</label>
    <input type="number" step="0.1" name="A" required/>

    <label for="B">Điểm giữa kỳ (B):</label>
    <input type="number" step="0.1" name="B" required/>

    <label for="C">Điểm cuối kỳ (C):</label>
    <input type="number" step="0.1" name="C" required/>

    <button type="submit">Tính điểm</button>
</form>

<p>@ViewBag.FinalScore</p>
